{
  "manifest_version": 3,
  "name": "AutoCraft",
  "version": "1.0",
  "description": "Make your basic automation with this chrome extension.",
  "permissions": ["tabs", "scripting"],
  "background": {
    "service_worker": "background/background.js"
  },
  "action": {
    "default_title": "DO IT",
    "default_popup": "popup/index.html"
  },
  "options_page": "options/index.html",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/index.js"]
    }
  ]
}
